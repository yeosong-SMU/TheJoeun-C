<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>게시판</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="container my-4">
    <h2 class="mb-4">게시판</h2>
    <div class="mb-3 text-end">
        <a href="/form" class="btn btn-primary">글쓰기</a>
    </div>

    <table class="table table-bordered table-striped text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>번호</th>
                <th>이름</th>
                <th>제목</th>
                <th>날짜</th>
                <th>조회수</th>
                <th>첨부</th>
                <th>다운</th>
            </tr>
        </thead>
        <tbody>
            <% for(var i=0; i < items.length; i++) { var item = items[i]; %>
                <tr>
                    <td><%= item.idx %></td>
                    <td><%= item.writer %></td>
                    <td class="text-start">
                        <a href="/detail/<%=item.idx%>"><%= item.title %></a>
                        <% if (item.cnt > 0) { %>
                            <span class="badge bg-danger ms-1"><%= item.cnt %></span>
                        <% } %>
                    </td>
                    <td><%= item.post_date %></td>
                    <td><%= item.hit %></td>
                    <td>
                        <% if(item.filesize > 0) { %>
                            <a href="/download/<%= item.idx %>">
                                <img src="/images/file_small.png" alt="파일" width="24" height="24" />
                            </a>
                        <% } %>
                    </td>
                    <td><%= item.down %></td>
                </tr>
            <% } %>
        </tbody>
    </table>
    
    <!-- 페이지네이션 -->
    <nav aria-label="페이지 이동" >
        <ul class="pagination justify-content-center">
            <% for (let i = 1; i <= totalPages; i++) { %>
                <% if (i === currentPage) { %>
                    <li class="page-item active"><span class="page-link"><%= i %></span></li>
                <% } else { %>
                    <li class="page-item"><a class="page-link" href="/page/<%= i %>"><%= i %></a></li>
                <% } %>
            <% } %>
        </ul>
    </nav>
</body>
</html>